<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import java.net.URL?>
<BorderPane prefHeight="877.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.161"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="jiro.app.MainController">
    <stylesheets>
        <URL value="@/css/bootstrapfx3.css"/>
        <URL value="@/css/basic.css"/>
    </stylesheets>
    <top>
        <MenuBar id="menuBar" prefHeight="30.0" prefWidth="1280.0">
            <menus>
                <Menu mnemonicParsing="false" text="ファイル">
                    <items>
                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" onAction="#openMenuItemOnAction"
                                  text="開く">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="saveMenuItem" mnemonicParsing="false" onAction="#saveMenuItemOnAction"
                                  text="保存する">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" text="別名で保存する">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="numberingSaveMenuItem" mnemonicParsing="false" text="ナンバリングで保存する"/>
                        <MenuItem fx:id="numberingSaveAsMenuItem" mnemonicParsing="false" text="別名を指定してナンバリングで保存する"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="optionsMenuItem" mnemonicParsing="false" text="設定"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="終了"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="ファイルリスト">
                    <items>
                        <MenuItem fx:id="insertMenuItem" mnemonicParsing="false" text="一括挿入"/>
                        <MenuItem fx:id="clearMenuItem" mnemonicParsing="false" text="クリア"/>
                        <MenuItem fx:id="listDeleteMenuItem" mnemonicParsing="false" text="リスト削除"/>
                        <MenuItem fx:id="listClearMenuItem" mnemonicParsing="false" text="リストクリア"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="画像ビューワ">
                    <items>
                        <MenuItem fx:id="upMenuItem" mnemonicParsing="false" text="上に移動">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="W" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="leftMenuItem" mnemonicParsing="false" text="左に移動">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="A" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="downMenuItem" mnemonicParsing="false" text="下に移動">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="rightMenuItem" mnemonicParsing="false" text="右に移動">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="D" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="zoomOutMenuItem" mnemonicParsing="false" text="縮小">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Q" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="zoomInMenuItem" mnemonicParsing="false" text="拡大">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="E" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="出力画像プレビュー">
                    <items>
                        <MenuItem fx:id="insertMenuItem1" mnemonicParsing="false" text="1番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT1" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem2" mnemonicParsing="false" text="2番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT2" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem3" mnemonicParsing="false" text="3番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT3" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem4" mnemonicParsing="false" text="4番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT4" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem5" mnemonicParsing="false" text="5番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT5" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem6" mnemonicParsing="false" text="6番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT6" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem7" mnemonicParsing="false" text="7番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT7" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="insertMenuItem8" mnemonicParsing="false" text="8番パネルから一括挿入">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="DIGIT8" control="ANY" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="ツクール">
                    <items>
                        <RadioMenuItem fx:id="mvRadioMenuItem" disable="false" mnemonicParsing="false" selected="true"
                                       text="ＭＶ">
                            <toggleGroup>
                                <ToggleGroup fx:id="group"/>
                            </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="vxaceRadioMenuItem" mnemonicParsing="false" text="ＶＸＡＣＥ"
                                       toggleGroup="$group"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="ヘルプ">
                    <items>
                        <MenuItem fx:id="versionInfoItem" mnemonicParsing="false" text="バージョン情報"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <TitledPane fx:id="fileListPane" styleClass="primary" prefHeight="2000.0" prefWidth="397.0" text="ファイルリスト">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1"/>
            </BorderPane.margin>
            <content>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <ListView fx:id="imageFileListView"
                                  onDragDropped="#imageFileListViewOnDragDropped"
                                  onDragOver="#imageFileListViewOnDragOver" prefHeight="200.0" prefWidth="200.0"
                                  BorderPane.alignment="CENTER"/>
                    </center>
                    <right>
                        <ToolBar orientation="VERTICAL" prefWidth="200.0">
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#addImagesButtonOnAction" text="一括挿入"/>
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#clearImagesButtonOnAction" text="クリア"/>
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#deleteListButtonOnAction" text="リスト削除"/>
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#clearListButtonOnAction" text="リストクリア"/>
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#upFileButtonOnAction" text="上"/>
                            <Button styleClass="btn, primary, lg" mnemonicParsing="false"
                                    onAction="#downFileButtonOnAction" text="下"/>
                            <RadioButton styleClass="radio-button, lg" mnemonicParsing="false" selected="true"
                                         onAction="#setModeRadioButtonOnAction"
                                         text="画像セット">
                                <toggleGroup>
                                    <ToggleGroup fx:id="clickModeGroup"/>
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton styleClass="radio-button, lg" mnemonicParsing="false"
                                         onAction="#deleteModeRadioButtonOnAction"
                                         text="画像削除" toggleGroup="$clickModeGroup"/>
                            <RadioButton styleClass="radio-button, lg" mnemonicParsing="false"
                                         onAction="#swapModeRadioButtonOnAction"
                                         text="画像位置交換" toggleGroup="$clickModeGroup"/>
                            <RadioButton styleClass="radio-button, lg" mnemonicParsing="false"
                                         onAction="#flipModeRadioButtonOnAction"
                                         text="画像左右反転" toggleGroup="$clickModeGroup"/>
                        </ToolBar>
                    </right>
                </BorderPane>
            </content>
        </TitledPane>
    </left>

    <center>
        <BorderPane prefHeight="847.0" prefWidth="808.0">

            <center>
                <TitledPane styleClass="primary" animated="false" collapsible="false" prefHeight="2000.0"
                            prefWidth="916.0" text="画像ビューワ">
                    <BorderPane.margin>
                        <Insets right="5.0" top="5.0"/>
                    </BorderPane.margin>
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <ScrollPane layoutX="13.0" layoutY="12.0" prefHeight="425.0" prefWidth="659.0"
                                            AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="13.0"
                                            AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="12.0">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <ImageView fx:id="selectedImageView" fitHeight="150.0" fitWidth="200.0"
                                                           onMouseDragged="#selectedImageViewOnMouseDragged"
                                                           pickOnBounds="true" preserveRatio="true"
                                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                                <Rectangle fx:id="leftShadowRectangle" styleClass="shadow-rectangle"
                                                           fill="BLACK" height="200.0"
                                                           width="200.0" AnchorPane.leftAnchor="0.0"
                                                           AnchorPane.bottomAnchor="0.0"/>
                                                <Rectangle fx:id="topShadowRectangle" styleClass="shadow-rectangle"
                                                           fill="BLACK" height="200.0"
                                                           width="200.0" AnchorPane.leftAnchor="0.0"
                                                           AnchorPane.topAnchor="0.0"/>
                                                <Rectangle fx:id="rightShadowRectangle" styleClass="shadow-rectangle"
                                                           fill="BLACK" height="200.0"
                                                           width="200.0" AnchorPane.topAnchor="0.0"
                                                           AnchorPane.rightAnchor="0.0"/>
                                                <Rectangle fx:id="bottomShadowRectangle" styleClass="shadow-rectangle"
                                                           fill="BLACK" height="200.0"
                                                           width="200.0" AnchorPane.rightAnchor="0.0"
                                                           AnchorPane.bottomAnchor="0.0"/>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </ScrollPane>
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
            </center>

            <bottom>
                <TitledPane styleClass="primary" animated="false" collapsible="false" prefHeight="330.0"
                            prefWidth="896.0" text="出力画像プレビュー">
                    <BorderPane.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0"/>
                    </BorderPane.margin>
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <Canvas fx:id="overLayerCanvas" styleClass="canvas"
                                        AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10"
                                        width="576" height="288"
                                        onMouseClicked="#overLayerCanvasOnMouseClicked"
                                />
                                <ImageView fx:id="outImageView" styleClass="image-view" AnchorPane.leftAnchor="10"
                                           AnchorPane.topAnchor="10"
                                           onMouseClicked="#outImageViewOnMouseClicked"
                                />
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
            </bottom>

            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </BorderPane>
    </center>
</BorderPane>
